<div class="row">
	<div class="col-md-2 col-xs-2 col-sm-9 col-lg-2">
	<br>
		<ul class="sidebar-list">
			<li>
	            <%= link_to conversations_path do %>
	              <i class="fa fa-envelope-o"></i> Messages</a>
	            <% end %>
          	</li>
            <li><%= link_to "Account Setting", edit_user_registration_path %></li>
		</ul>
	</div>
	<div class="col-md-9 col-xs-9 col-sm-9 col-lg-9">
	<br>
		<div class="panel panel-default">
			<div class="panel-heading">
				Dashboard - <%= current_user.fullname %> 
			</div>
			<div class="panel-body">
				<div class="row">
					<% if !current_user.profile(@profile) %>
						<div class="col-md-9">
						Selamat datang di Gikku!
						<br>
						Silahkan klik tombol di bawah untuk membuat halaman profil anda.
						<br><br>
							<%= link_to "Buat Halaman Profil", new_profile_path, class: "btn btn-primary" %>
							<% end %>
					</div>
					<% if current_user.profile(@profile) %>
						<div class="col-md-2">
							<%= image_tag @profile.profilepic, class: "thumb" %>
						</div>
						<div class="col-md-6">
							<h4><%= @profile.profile_name %></h4>
						</div>
						<div class="col-md-2 right">
							<%= link_to "View Your Profile", profile_path(@profile), class: "btn btn-primary" %>
						</div>
						<div class="col-md-2 right">
							<%= link_to "Update", edit_profile_path(@profile), class: "btn btn-primary" %>
						</div>
					<% end %>
				</div>
					<hr>
			</div>
		</div>
	</div>
</div>
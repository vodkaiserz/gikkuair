<div class="row">
	<div class="col-md-2">
		<ul class="sidebar-list">


		</ul>
	</div>
	<div class="col-md-10">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Profile Page
			</div>
			<div class="panel-body">
				<div class="row">
					<% if !current_user.profile(@profile) %>
						<div class="col-md-2">
							<%= link_to "Create Your Profile", new_profile_path, class: "btn btn-primary" %>
						</div>
					<% end %>
					<% if current_user.profile(@profile) %>
						<div class="col-md-2">
							<%= image_tag @profile.profilepic, class: "thumb" %>
						</div>
						<div class="col-md-6">
							<h4><%= @profile.profile_name %></h4>
						</div>
						<div class="col-md-2 right">
							<%= link_to "View Your Profile", profile_path(@profile), class: "btn btn-primary" %>
						</div>
						<div class="col-md-2 right">
							<%= link_to "Update", edit_profile_path(@profile), class: "btn btn-primary" %>
						</div>
					<% end %>
				</div>
					<hr>
			</div>
		</div>
	</div>
</div>
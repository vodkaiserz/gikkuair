<div class="panel panel-default">
	<div class="panel-body">
		<!-- Image -->

		<br>

		<!-- Main Info -->
		<div class="row">
			<div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
				<div class="row">
					<div class="col-xs-4 col-sm-3 col-md-3 col-lg-3 text-center">
						
						<%= image_tag @profile.profilepic, class: "img-circle avatar-full" %><br><br>
						
						<h4><%= @profile.profile_name %></h4>
						<%= @profile.location %>
						
					</div>
					<div class="col-xs-5 col-xs-offset-1 col-sm-8 col-md-8 col-lg-8">
						<h2>About Performer</h2>
						<p><%= @profile.bio %></p>
					</div>
				</div>
			</div>

			<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
				<!-- Reservation form -->
				<% if user_signed_in? %>
					<% if current_user.id != @profile.user.id %>
				        <div class="row-space-2">
				          <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary wide" %>
				        </div>
				    <% end %>	
					<% if current_user.id == @profile.user.id %>
						<%= link_to "Profile Home", profiles_path, class: "btn btn-primary" %>
						<%= link_to "Update Profile", edit_profile_path(@profile), class: "btn btn-primary" %>
					<% end %>
				<% else %>
						<%= link_to "Register to Send Message", new_user_registration_path, class: "btn btn-primary wide" %>
			    <% end %>
			</div>
		</div>
		<br>
		<div class="row">
				<div class="col-xs-4 col-sm-3 col-lg-3 col-md-3 text-center">
						<div class="row text-center">
							<div class="col-xs-2 col-sm-4">
								<i class="fa fa-music fa-2x"></i>
								<br>
								<%= @profile.category %>
							</div>
							<div class="col-xs-2 col-xs-offset-1 col-sm-4">
								<i class="fa fa-users fa-2x"></i>
								<br>
								<%= pluralize @profile.member, "Member" %>
							</div>
						</div>

				</div>
			</div>

		<!-- About -->
		<div class="row">
			<div class="col-md-2">
						<br>
						<h4>Status Tambahan: </h4>
							<ul class="amenities">
								<li class="<%= 'text-line-through' if !@profile.is_english %>"> English Language</li>
								<li class="<%= 'text-line-through' if !@profile.is_indonesia %>">Bahasa Indonesia</li>
								<li class="<%= 'text-line-through' if !@profile.is_travel %>">Willing to travel</li>
							</ul>
					</div>
					<div class="col-md-2">
						<br>
						<h4>Available for: </h4>
							<ul class="amenities">
								<li class="<%= 'text-line-through' if !@profile.is_cafe %>">Cafe Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_corporate %>">Corporate Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_wedding %>">Wedding Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_birthday %>">Birthday Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_school %>">School Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_private %>">Private Event</li>
							</ul>
					</div>
		</div>
		<hr>
		<!-- Carousel -->
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <% if @photos %>
					  <ol class="carousel-indicators">
					    <% @photos.each do |photo| %>
					    	<li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
				    	<% end %>
					  </ol>
				  <% end %>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner" role="listbox">
				    <% if @photos %>
						<% @photos.each do |photo| %>
						    <div class="item <%= 'active' if photo.id == @photos[0].id %>">
						      <%= image_tag photo.image.url %>
						    </div>
					    <% end %>
					<% end %>
				  </div>

				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
			</div>
		</div>
		<% if @profile.videos.any? %>
		  <div class="container">
		    <% @profile.videos.in_groups_of(3) do |group| %>
		      <div class="row">
		        <% group.each do |video| %>
		        <% if video %>
		            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
		              <div class="videoWrapper">
		              <iframe width="350" height="180" src="<%= "http://www.youtube.com/embed/" + video.uid %>"frameborder="0" allowfullscreen></iframe>
		                <div class="caption">
		                  <h5><%= video.title %></h5>
		                </div>
		              </div>
		            </div>
		        <% end %>
		        <% end %>
		      </div>
		      <% end %>
		  </div>
		 <% end %>
		<br>
		

			<%= render "proposals/form", :locals => {:proposal => new_proposal} %>


	</div>
</div>

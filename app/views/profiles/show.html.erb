<div class="panel panel-default">
	<div class="panel-body">
		<!-- Image 
		<div class="row">
			<div class="col-md-12">
				<%= image_tag @photos[0].image.url, class: "img-responsive" if @photos.length > 0 %>
			</div>
		</div>

		<br>-->

		<!-- Main Info -->
		<div class="row">
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-3 text-center">
						<%= image_tag avatar_url(@profile.user), class: "img-circle avatar-large" %><br><br>
						<h4><%= @profile.profile_name %></h4>
						<%= @profile.location %>
					</div>
					<div class="col-md-9">

						<div class="row text-center row-space-1">
							<div class="col-sm-3">
								<i class="fa fa-music fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-users fa-2x"></i>
							</div>
						</div>

						<div class="row text-center">
							<div class="col-sm-3">
								<%= @profile.category %>
							</div>
							<div class="col-sm-3">
								<%= pluralize @profile.member, "Member" %>
							</div>
						</div>
						<br>
						
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<!-- Reservation form -->

				<% if current_user != @user %>
					<%= link_to "Send Message", conversations_path(sender_id: @current_user.id, recipient_id: @user.id), method: "post", class: "btn btn-primary wide" %>
				<% end %>
				<% if current_user == @user %>
					<%= link_to "Profile Home", profiles_path, class: "btn btn-primary" %>
					<%= link_to "Update Profile", edit_profile_path(@profile), class: "btn btn-primary" %>
				<% end %>

			</div>

		</div>

		<!-- About -->
		<div class="row">
			<div class="col-md-6">
				<h2>About Performer</h2>
				<p><%= @profile.bio %></p>
			</div>
			<div class="col-md-2">
						<br>
						<h4>Status Tambahan: </h4>
							<ul class="amenities">
								<li class="<%= 'text-line-through' if !@profile.is_english %>"> English Language</li>
								<li class="<%= 'text-line-through' if !@profile.is_indonesia %>">Bahasa Indonesia</li>
								<li class="<%= 'text-line-through' if !@profile.is_travel %>">Willing to travel</li>
							</ul>
					</div>
					<div class="col-md-2">
						<br>
						<h4>Available for: </h4>
							<ul class="amenities">
								<li class="<%= 'text-line-through' if !@profile.is_cafe %>">Cafe Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_corporate %>">Corporate Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_wedding %>">Wedding Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_birthday %>">Birthday Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_school %>">School Event</li>
								<li class="<%= 'text-line-through' if !@profile.is_private %>">Private Event</li>
							</ul>
					</div>
		</div>
		<hr>
		<!-- Carousel -->
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <% if @photos %>
					  <ol class="carousel-indicators">
					    <% @photos.each do |photo| %>
					    	<li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
				    	<% end %>
					  </ol>
				  <% end %>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner" role="listbox">
				    <% if @photos %>
						<% @photos.each do |photo| %>
						    <div class="item <%= 'active' if photo.id == @photos[0].id %>">
						      <%= image_tag photo.image.url %>
						    </div>
					    <% end %>
					<% end %>
				  </div>

				  <!-- Left and right controls -->
				  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
			</div>
		</div>
		
		<br>
		

		<!-- Reviews 
		<hr>
		<div class="row">
			<div class="col-md-12">
				<h3>Reviews <span id="average_rating"></span> (<%= @reviews.count %>)</h3>
				<div class="container">
					<div>
						<%= render "reviews/form" if @booked && !@hasReview %>
					</div>
					<div>
						<%= render "reviews/list" %>
					</div>
				</div>
			</div>
		</div>-->

		<% if current_user != @user %>
		<hr>
		<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<%= render "bookings/form" %>
		</div>
		<hr>
		<% end %>

	</div>
</div>

<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Profile", profiles_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Bookings", your_bookings_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Past Events", your_pastevents_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Bookings
			</div>
			<div class="panel-body">
				<% @profiles.each do |profile| %>
					<% profile.bookings.each do |booking| %>
						<div class="row">
							<div class="col-md-2">
								<%= booking.start_datetime.strftime("%v") %>
							</div>
							<div class="col-md-6">
								<%= link_to room_path(booking.profile) do %>
									<%= image_tag booking.profile.photos[0].image.url(:thumb) if booking.profile.photos.length > 0 %>
								<% end %>
							</div>
							<div class="col-md-2">
								<%= link_to user_path(booking.user) do %>
									<%= image_tag avatar_url(booking.user), class: "img-circle avatar-medium" %>
								<% end %>
							</div>
							<div class="col-md-2 right">
								<h4>$<%= booking.total %></h4>
							</div>
						</div>
						<hr>
					<% end %>
				<% end %>  
			</div>
		</div>
	</div>
</div>